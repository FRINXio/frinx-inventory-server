{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2019"],
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "outDir": "build",
    "rootDirs": ["src", "prisma"]
  },
  "include": ["src", "prisma"],
  "exclude": [".eslintrc.js"]
}
